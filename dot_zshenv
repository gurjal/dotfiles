# # gamemode hybrid graphics
# export GAMEMODERUNEXEC="env __NV_PRIME_RENDER_OFFLOAD=1 __GLX_VENDOR_LIBRARY_NAME=nvidia __VK_LAYER_NV_optimus=NVIDIA_only"
# xdg
export XDG_CONFIG_HOME="$HOME/.config/"
export XDG_CACHE_HOME="$HOME/.cache/"
export XDG_DATA_HOME="$HOME/.local/share/"
export XDG_STATE_HOME="$HOME/.local/state/"
# zsh
export ZSH_BIN="$XDG_CONFIG_HOME/zsh_config/bin"
# bash
export INPUTRC="$XDG_CONFIG_HOME/inputrc"
# less
export LESSHISTFILE="$XDG_CACHE_HOME/lesshst"
# flatpak
XDG_DATA_DIRS="$XDG_DATA_DIRS:$HOME/.local/share/flatpak/exports/share"
export XDG_DATA_DIRS="$XDG_DATA_DIRS:/var/lib/flatpak/exports/share"
# doom
export DOOMDIR="$XDG_CONFIG_HOME/doom/"
# go
export GOPATH="$XDG_DATA_HOME/go/"
export GOMODCACHE="$XDG_CACHE_HOME/go/pkg/mod/"
# rust
export CARGO_HOME="$XDG_DATA_HOME/cargo/"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup/"
# npm
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
# void
export XBPS_DISTDIR="$HOME/Source/void-packages/"
export SVDIR="$HOME/.local/service/"
# go path
PATH="$GOPATH/bin/:$PATH"
# rust path
PATH="$CARGO_HOME/bin/:$PATH"
# emacs path
PATH="$PATH:$XDG_CONFIG_HOME/emacs/bin/"
# local path
export PATH="$HOME/.local/bin/:$PATH"
