#xdg
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
#zsh
export ZSH_BIN="$XDG_CONFIG_HOME/zsh_config/bin"
export INPUTRC="$XDG_CONFIG_HOME/inputrc"
export LESSHISTFILE="$XDG_CACHE_HOME/lesshst"
#go
export GOPATH="$XDG_DATA_HOME/go"
export GOMODCACHE="$XDG_CACHE_HOME/go/pkg/mod"
#rust
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
#npm
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
#notes
export ZK_NOTEBOOK_DIR="$HOME/.gurjal/zettelkasten"
#void
export XBPS_DISTDIR="$HOME/Source/void-packages"
#path
PATH="$CARGO_HOME/bin:$GOPATH/bin:$PATH"
PATH="$PATH:$XDG_CONFIG_HOME/emacs/bin"
export PATH="$PATH:$HOME/.local/bin"
