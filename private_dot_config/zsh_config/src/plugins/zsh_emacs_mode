# key bindings
bindkey -e
bindkey -r '^[x'
bindkey '^ ' _seek_dir
bindkey '^v' _seek_file
bindkey '^[ ' _seek_hidden_dir
bindkey '^[v' _seek_hidden_file
bindkey -r '^o' 
bindkey '^o' _seek_file_and_open
bindkey '^xp' _seek_proc_by_cpu
bindkey '^[xp' _seek_proc_by_mem
bindkey '^xe' _seek_env_vars
bindkey '^xk' _seek_kill_process
bindkey -r '^r'
bindkey '^r' _seek_history
bindkey '^xm' _quick_mount
bindkey '^xn' " neofetch\n"
bindkey '^xc' "bc -l <<<"

source "$ZSH_BIN/zsh-history-substring-search.zsh"
bindkey '^p' history-substring-search-up
bindkey '^n' history-substring-search-down
